@model demomvc.Models.Calculadora
@{
    ViewData["Title"] = "Calculadora";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
<div class="col-md-4">
<form asp-action="Calcular">
    <div class="form-group">
        <input asp-for="Ope1" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Ope2" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="Operacion" class="form-control">
            <option value="+">Suma</option>
            <option value="-">Resta</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Calcular" class="btn btn-primary" />
    </div>
</form>
</div>
</div>
<h3>@ViewData["Message"]</h3>
